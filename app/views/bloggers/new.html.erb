<h1> Create a Blogger </h1>
<% if flash[:my_errors]%>
<ul>
<% flash[:my_errors].each do |error|%>
    <li> <%= error %></li>
    <%end%>
    </ul>
<%end%>
<%= form_for @blogger do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>
        <br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br>
    <%= f.label :bio %>
    <%= f.text_field :bio%>
    <br>
    <%= f.submit%>
    
<% end %>